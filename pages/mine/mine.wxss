
Page{
  background-color: #f2f2f2;
}

/*头部分  */
.header{
  background-color: rgba(255,96,0,1.0);
}
/* 头试图上部分 */
.header_top{
  display: flex;
  align-items: center;
}
.header_top_left{
  display: flex;
  align-items: center;
}
.header_top_left text{
  font-size: 45rpx;
  color: white;
  margin-left: 30rpx;
}
.header_top_left_img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 20rpx 20rpx;
}
.header_top_left_img_2{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 25rpx;
}
.header_top_right{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;
}
 .back{
  width: 25rpx;
  height: 35rpx;
  margin-right: 15rpx;
}
/*头试图下部分  */
.header_bottom{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.header_bottom_item{
  text-align: center;
  width: 33vw;
  color: white;
  background-color: rgba(255,255,255,0.4);
  font-size: 30rpx;
}
.header_bottom_item_nub{
  display: block;
  font-size: 28rpx;
}
/*订单  */
.order{
  display: flex;
  background-color: white
}
.order_item{
  text-align: center;
  width: 25vw;
}
 .order_item_title{
  display: block;
  font-size: 28rpx;
  color: #999;
}
.order_item image{
  margin-top: 10rpx;
  width: 80rpx;
  height: 58rpx;
} 

/*尾部  */
.bottom{
  margin-top: 10rpx;
}

